<%= render partial: 'frontend/home/includes/header_category', locals: { item: category } %>
<% posts_by_category(category: category).each_with_index do |post, index| %>
  <div class='w-100 post <%= 'first-post' if index.zero? %>'>
    <a href='<%= post_url(post) %>'>
      <%= image_tag(url_for(post.cover.variant(combine_options: { resize: '360x200^', extent: '360x200', gravity: 'Center' })), class: 'img-fluid') if post.cover.attached? && index == 0 %>
      <%= content_tag(:h3, post.name, class: 'font-default font-weight-medium title-size') %>
    </a>
  </div>
<% end %>