<div class='home-category w-100'>
  <%= render partial: 'frontend/home/includes/header_category', locals: { item: item } %>
  <div class='row'>
  <% 
      posts_by_category(category: item).each_with_index do |post, index|
        concat "<div class='col-lg-6 #{ (index == 1) ? 'right' : 'left' } '>".html_safe if [0,1].include?(index)
        partial = if index == 0
                    'post_by_category_left'
                  else
                    'post_by_category_right'
                  end
        concat render partial: "frontend/home/includes/#{partial}", locals: { post: post }
        concat '</div>'.html_safe if [0,2].include?(index)
      end
  %>
  </div>
</div>