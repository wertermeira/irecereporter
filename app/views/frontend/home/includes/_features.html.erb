<section class='features'>
  <div class='row inner-m-10'>
  <% posts.each_with_index do |post, index| %>
      <%= "<div class='col-lg-6'>".html_safe if [0,1].include?(index) %>
        <%= "<div class='w-100'>".html_safe if index == 1 %>
        <%= "<div class='row'>".html_safe if index == 2 %>
        <%= "<div class='col-lg-6'>".html_safe if [2,3].include?(index)  %>
          <div class='post post_<%= index %>'>
            <a href="<%= post_url(post) %>" class='font-weight-bold'>
              <%= content_tag(:div, image_tag(url_for(post.cover.variant(combine_options: resize_image_feature_options(index))), class: 'img-fluid')) %>
              <div class='description'>
                <span>
                  <%= post.categories.pluck(:name).join(', ') %>
                </span>
                <%= content_tag(:p, post.name) %>
              </div>
            </a>
          </div>
        <%= "</div>".html_safe if [2,3].include?(index)  %>
        <%= "</div>".html_safe if [1,3].include?(index) %>
      <%= '</div>'.html_safe if [0,3].include?(index) %>
  <% end %>
  </div>
</section>