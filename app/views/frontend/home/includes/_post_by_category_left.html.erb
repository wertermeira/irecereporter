<div class='post'>
  <a href='<%= post_url(post) %>'>
    <%= content_tag(:div, image_tag(url_for(post.cover.variant(combine_options: { resize: '555x289^', extent: '555x289', gravity: 'Center' })), class: 'img-fluid')) %>
    <%= content_tag(:h3, post.name, class: 'font-default font-weight-medium title-size') %>
    <%= content_tag(:time, time_ago_in_words(post.created_at)) %>
  </a>
  <%= content_tag(:summary, post.summary, class: 'font-default font-weight-regular summary-size') if post.summary.present? %>
</div>