<%= render partial: 'backoffice/shared/header_add', locals: { path: new_backoffice_category_path } %>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col"><%= sort_link(@q, :id, '#', default_order: :desc) %></th>
      <th scope="col"><%= sort_link(@q, :name, 'Nome', default_order: :desc) %></th>
      <th scope="col">Exibir na home</th>
      <th scope="col" class='text-center'>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <th scope="row"><%= category.id %></th>
        <td><%= category.name %></td>
        <td><%= category.show_on_home ? 'sim' : 'não' %></td>
        <td class='text-center'>
          <%= link_to 'Posts', backoffice_posts_path(q: {post_categories_category_id_eq: category.id}), class: 'btn btn-info btn-sm' %>
          <%= link_to 'Editar', edit_backoffice_category_path(category), class: 'btn btn-primary btn-sm' %>
          <%= link_to 'Excluir', backoffice_category_path(category), method: :delete, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="d-flex justify-content-center">
  <%= paginate @categories %>
</div>