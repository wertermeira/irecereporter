<%= simple_form_for([:backoffice, @banner], html: { multipart: true }) do |f| %>
  <%= f.input :name %>
  <%= f.input :banner, as: :file %>
  <%= f.input :date_start %>
  <%= f.input :date_end %>
  <%= f.input :kind, as: :select, collection: Banner::KINDS.keys, input_html: { class: 'select2' } %>
  <%= f.input :active, as: :boolean %>
  <%= f.button :submit, class: 'btn-success' %>
<% end %>
